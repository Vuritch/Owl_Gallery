@{
    ViewData["Title"] = "Thank You";
    var orderId = ViewBag.OrderId;
}

<div class="container py-5 text-center">
    <div class="card shadow-sm border-0 p-4">
        <h1 class="display-4 text-owl-purple fw-bold">Thank you for your order!</h1>
        <p class="lead mb-4">We've received your order and will process it shortly.</p>

        <div class="alert alert-success shadow-sm mx-auto" style="max-width: 400px;">
            <strong>Order Number:</strong> <span class="fw-bold text-dark">#@orderId</span>
        </div>

        <p class="text-muted">A confirmation email will be sent to you shortly.</p>

        <a asp-controller="Index" asp-action="Index" class="btn btn-owl btn-lg mt-4">
            Back to Home
        </a>
    </div>
</div>

<style>
    .text-owl-purple {
        color: #5d16c1;
    }

    .btn-owl {
        background-color: #5d16c1;
        color: #fff;
        padding: 0.75rem 1.75rem;
        border-radius: 0.375rem;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(93, 22, 193, 0.3);
        transition: all 0.3s ease-in-out;
    }

        .btn-owl:hover {
            background-color: #4a109e;
            box-shadow: 0 6px 16px rgba(93, 22, 193, 0.45);
        }
</style>
