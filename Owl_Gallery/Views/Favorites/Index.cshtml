@model IEnumerable<Owl_Gallery.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "My Favorites";
}

<div class="container my-5">
    <h1 class="mb-5 text-center fw-bold text-owl-purple animate__animated animate__fadeInDown">
        💜 My Favorite Products
    </h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow p-4 rounded animate__animated animate__fadeIn">
            <p class="mb-1">You haven’t added any favorites yet.</p>
            <a asp-controller="Products" asp-action="Products" class="btn btn-outline-purple mt-3">
                Browse Products
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 animate__animated animate__zoomIn">
                    <div class="card border-0 h-100 shadow-sm product-card">
                        <div class="position-relative">
                            <img src="@p.ImageUrl"
                                 class="card-img-top rounded-top"
                                 alt="@p.Name"
                                 style="object-fit: cover; height: 230px;" />
                            <span class="badge bg-owl-purple position-absolute top-0 start-0 m-2 px-3 py-2 rounded-pill">
                                <i class="fas fa-heart text-white"></i> Favorite
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column p-3">
                            <h5 class="card-title fw-semibold text-dark text-truncate">@p.Name</h5>
                            <p class="price-tag mb-3 text-muted">EGP @Math.Round(p.Price)</p>

                            <div class="mt-auto d-grid gap-2">
                                <form asp-controller="Favorites" asp-action="Remove" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@p.Id" />
                                    <button type="submit" class="btn btn-outline-danger w-100">
                                        <i class="fas fa-heart-broken me-1"></i> Remove
                                    </button>
                                </form>

                                <a asp-controller="Products"
                                   asp-action="Details"
                                   asp-route-id="@p.Id"
                                   class="btn btn-purple btn-lg w-100">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .text-owl-purple {
        color: #5d16c1;
    }

    .bg-owl-purple {
        background-color: #5d16c1;
    }

    .btn-owl {
        background-color: #5d16c1;
        color: #fff;
        font-weight: 600;
        border-radius: .5rem;
        transition: all 0.3s ease;
    }

        .btn-owl:hover {
            background-color: #44109b;
            box-shadow: 0 0.5rem 1rem rgba(93, 22, 193, 0.2);
        }

    .btn-outline-purple {
        color: #5d16c1;
        border: 1px solid #5d16c1;
    }

        .btn-outline-purple:hover {
            background-color: #5d16c1;
            color: #fff;
        }

    .product-card {
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        border-radius: 1rem;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        }

    .price-tag {
        font-size: 1.1rem;
        font-weight: 500;
        color: #333;
    }

    .card-title {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: .5rem;
    }
</style>
