@model Owl_Gallery.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    bool isLogin = true;
}

<div class="auth-card">

    <!-- TAB BAR -->
    <div class="auth-tabs">
        <a class="auth-tab @(isLogin ? "active" : "")"
           href="@Url.Action("Login","Login")">Login</a>

        <a class="auth-tab @(!isLogin ? "active" : "")"
           href="@Url.Action("Register","Register")">Register</a>

        <!-- purple slider -->
        <div class="tab-slider" style="transform:translateX(@(isLogin?0:100)%);"></div>
    </div>

    <!-- BODY -->
    <div class="auth-body">
        <h2 class="auth-title">Welcome Back</h2>

        <!-- displays “Invalid e-mail or password.” -->
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <form asp-controller="Login" asp-action="Login" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input asp-for="Email" type="email" placeholder=" " autocomplete="username" />
                <label>Email address</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" placeholder=" " autocomplete="current-password" />
                <label>Password</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Remember Me checkbox -->
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" id="rememberMeCheck" />
                <label asp-for="RememberMe" class="form-check-label" for="rememberMeCheck">Remember me</label>
            </div>

            <button type="submit" class="btn-animate w-100">Log In</button>
        </form>

        <p class="switch-link mt-3">
            Don’t have an account?
            <a href="@Url.Action("Register","Register")">Sign up</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
