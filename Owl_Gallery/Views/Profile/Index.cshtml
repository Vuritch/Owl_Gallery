@model Owl_Gallery.ViewModels.ProfileUpdateViewModel
@{
    ViewData["Title"] = "My Account";
    bool openPwd = ViewBag.OpenPassword == true;
}

<div class="container py-5">
    <h2 class="mb-5 text-purple mt-5 text-center fw-bold display-5 animate-fade-in">🧑‍💼 My Profile</h2>

    @if (TempData["Success"] != null)
    {
        <div id="successAlert"
             class="alert alert-success alert-dismissible fade show text-center shadow-sm p-3 rounded-4"
             role="alert">
            <i class="fas fa-check-circle me-2"></i><strong>Success:</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Update" method="post" class="glass-card p-5 shadow rounded-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="row g-4">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="FirstName" class="form-control" />
                    <label asp-for="FirstName">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" />
                    <label asp-for="LastName">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>
            </div>

            <div class="col-12">
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" />
                    <label asp-for="Email">Email address</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <hr class="my-5" />

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="text-purple fw-bold mb-0"><i class="fas fa-lock me-2"></i>Change Password</h5>
            <button type="button"
                    class="btn btn-outline-purple btn-sm rounded-pill"
                    data-bs-toggle="collapse"
                    data-bs-target="#changePasswordSection"
                    aria-expanded="@(openPwd.ToString().ToLower())"
                    aria-controls="changePasswordSection">
                @(openPwd ? "Hide" : "Update")
            </button>
        </div>

        <div id="changePasswordSection" class="collapse @(openPwd ? "show" : "")">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="CurrentPassword" class="form-control" type="password" />
                        <label asp-for="CurrentPassword">Current Password</label>
                        <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="NewPassword" class="form-control" type="password" />
                        <label asp-for="NewPassword">New Password</label>
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5 text-end">
            <button type="submit" class="btn btn-purple btn-glow px-5 py-2 fw-semibold rounded-pill">💾 Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setTimeout(() => {
            const s = document.getElementById('successAlert');
            if (s) {
                s.classList.remove('show');
                s.classList.add('fade');
            }
        }, 2000);
    </script>
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 1.5rem;
        transition: all 0.3s ease;
    }

        .glass-card:hover {
            box-shadow: 0 8px 24px rgba(93, 22, 193, 0.1);
        }

    .btn-glow {
        animation: glowPulse 2.5s ease-in-out infinite;
    }

    @@keyframes glowPulse {
        0%, 100%

    {
        box-shadow: 0 0 18px rgba(93, 22, 193, 0.3);
    }

    50% {
        box-shadow: 0 0 30px rgba(93, 22, 193, 0.5);
    }

    }

    .form-floating .form-control {
        border-radius: 0.75rem;
        border: 1px solid #ddd;
        padding-left: 1rem;
        padding-right: 1rem;
        background-color: #fff;
        color: #000;
    }

        .form-floating .form-control:focus {
            border-color: #5d16c1;
            box-shadow: 0 0 0 0.25rem rgba(93, 22, 193, 0.25);
        }

    .btn-outline-purple {
        border: 1px solid #5d16c1;
        color: #5d16c1;
        font-weight: 600;
    }

        .btn-outline-purple:hover {
            background: #5d16c1;
            color: white;
        }

    .animate-fade-in {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s ease forwards;
    }

    @@keyframes fadeInUp {
        from

    {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    /* 🌙 DARK MODE OVERRIDES */
    body.dark-mode .glass-card {
        background: rgba(24, 24, 24, 0.95);
        color: #eee;
    }

    body.dark-mode .form-floating .form-control {
        background-color: #1e1e1e;
        color: #eee;
        border: 1px solid #444;
    }

        body.dark-mode .form-floating .form-control:focus {
            border-color: #bb86fc;
            box-shadow: 0 0 0 0.25rem rgba(187, 134, 252, 0.3);
        }

    body.dark-mode .btn-outline-purple {
        color: #bb86fc;
        border-color: #bb86fc;
    }

        body.dark-mode .btn-outline-purple:hover {
            background-color: #bb86fc;
            color: #000;
        }

    body.dark-mode label,
    body.dark-mode .form-label {
        color: #ccc;
    }

    body.dark-mode .btn-purple {
        background-color: #bb86fc;
        color: #000;
    }

        body.dark-mode .btn-purple:hover {
            background-color: #a168ff;
            color: #fff;
        }
</style>
