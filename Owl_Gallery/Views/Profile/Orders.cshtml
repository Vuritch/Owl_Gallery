@model List<Owl_Gallery.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <h2 class="text-center text-purple display-5 fw-bold mb-5 animate-fade-in">📦 My Orders</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm p-4 rounded-4">
            <i class="fas fa-box-open fa-2x text-purple mb-3 d-block"></i>
            <h5 class="text-muted">You haven't placed any orders yet.</h5>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model)
            {
                <div class="col-md-6 reveal-up">
                    <div class="card glass-card shadow-sm border-0 rounded-4 overflow-hidden h-100">
                        <div class="card-header bg-purple text-white d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-receipt me-2"></i>Order #@order.Id</span>
                            <small class="fst-italic">@order.CreatedAt.ToString("dd MMM yyyy")</small>
                        </div>

                        <ul class="list-group list-group-flush">
                            @foreach (var item in order.Items)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@item.Product.Name</span>
                                    <span class="badge bg-purple-subtle text-purple fw-bold rounded-pill">
                                        x @item.Quantity
                                    </span>
                                </li>
                            }
                        </ul>

                        <div class="card-footer bg-light d-flex justify-content-between align-items-center fw-bold">
                            <span class="text-muted">Total</span>
                            <span class="text-purple">EGP @order.Total.ToString("F2")</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(8px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(93, 22, 193, 0.15);
        }

    /* Subtle purple badge */
    .bg-purple-subtle {
        background-color: rgba(93, 22, 193, 0.1);
    }

    /* Animate reveal */
    .reveal-up {
        opacity: 0;
        transform: translateY(40px);
        transition: all 0.7s ease-in-out;
    }

        .reveal-up.visible {
            opacity: 1;
            transform: none;
        }

    /* 🌙 Dark Mode for My Orders */
    body.dark-mode .card {
        background-color: #1f1f1f;
        color: #e0e0e0;
        border: 1px solid #333;
    }

    body.dark-mode .card-header {
        background-color: #292929;
        color: #bb86fc;
        border-bottom: 1px solid #3a3a3a;
    }

    body.dark-mode .card-footer {
        background-color: #1a1a1a;
        border-top: 1px solid #333;
        color: #eee;
    }

    body.dark-mode .list-group-item {
        background-color: #262626;
        border-color: #333;
        color: #ddd;
    }

    body.dark-mode .badge.bg-secondary {
        background-color: #5d16c1;
        color: white;
    }

    body.dark-mode .alert-info {
        background-color: #2a2a2a;
        color: #ccc;
        border-color: #3f3f3f;
    }

    body.dark-mode h2,
    body.dark-mode strong {
        color: #bb86fc;
    }
</style>
